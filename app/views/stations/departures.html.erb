<% provide(:title, "#{@station} - Departures") %>
<% provide(:description, "Real-time train departures for #{@station}.") %>

<div class="container">
	<h1><%= @station %></h1>
	<ul class="nav nav-tabs">
		<li role="presentation"><a href="<%= @station.url %>">Summary</a></li>
		<li role="presentation" class="active"><a href="#">Departures</a></li>
		<li role="presentation"><a href="<%= @station.url + "/arrivals" %>" rel="nofollow">Arrivals</a></li>
	</ul>
	
	<h3>Departure Board</h3>
	
<% @departure_board.nrcc_messages.each do |message| %>
	<div class="alert alert-warning" role="alert">
		<%= icon('info-sign') %>
		<%= message %>
	</div>
<% end %>

	<div class="list-group">
	<% @departure_board.train_services.each do |service_item| %>
	    <a href="<%= service_item.url %>" class="list-group-item">
	    	<div class="row">
	    		<div class="col-xs-10">
					<h4 class="list-group-item-heading"><%= service_item.std %> <%= service_item.destination %></h4>
					<p class="list-group-item-text text-<%= service_item.css %>"><%= service_item.etd %></p>					
					<p class="list-group-item-text">From <%= service_item.origin %> - <%= service_item.operator %></p>
				</div>
				<div class="col-xs-2 text-right">
					<h3><%= service_item.platform %></h3>	
				</div>
			</div>
		</a>
	<% end %>
	</div>

	<%= data_feeds_link %>

</div>
