<% provide(:title, "#{@station} - Arrivals") %>
<% provide(:description, "Real-time train arrivals for #{@station}.") %>

<div class="container">
	<h1><%= @station %></h1>

<%= render 'navigation' %>

	<h3>Arrival Board</h3>

<% @arrival_board.nrcc_messages.each do |message| %>
	<div class="alert alert-warning" role="alert">
		<%= icon('info-sign') %>
		<%= message %>
	</div>
<% end %>

	<div class="list-group">
	<% @arrival_board.train_services.each do |service_item| %>
	    <a href="<%= service_item.url %>" class="list-group-item">
	    	<div class="row">
	    		<div class="col-xs-10">
					<h4 class="list-group-item-heading"><%= service_item.sta %> <%= service_item.origin %></h4>
					<p class="list-group-item-text text-<%= service_item.css %>"><%= service_item.eta %></p>					
					<p class="list-group-item-text">To <%= service_item.destination %> - <%= service_item.operator %></p>
				</div>
				<div class="col-xs-2 text-right">
					<h3><%= service_item.platform %></h3>	
				</div>
			</div>
		</a>
	<% end %>
	</div>

	<%= data_feeds_link %>

</div>
