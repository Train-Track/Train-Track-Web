<% provide(:title, "#{@station} - Arrivals") %>
<% provide(:description, "Real-time train arrivals for #{@station}.") %>

<div class="container">
	<h1><%= @station %></h1>

<%= render 'navigation' %>

	<h3>Arrival Board</h3>

<% @arrival_board.nrcc_messages.each do |message| %>
	<div class="alert alert-warning" role="alert">
		<%= icon('info-sign') %>
		<%= message.text %>
	</div>
<% end %>

	<div class="list-group">
	<% @arrival_board.train_services.each do |service| %>
	    <a href="<%= service.url %>" class="list-group-item">
	    	<div class="row">
	    		<div class="col-xs-10">
					<h4 class="list-group-item-heading">
						<%= service.sta.strftime('%H:%M') if service.sta %>
						<%= service.origin %>
					</h4>
					<p class="list-group-item-text"><%= service.description %></p>
					<p class="list-group-item-text">To <%= service.destination %> - <%= service.operator %></p>
				</div>
				<div class="col-xs-2 text-right">
					<h1 class="list-group-item-heading"><%= service.platform %></h1>
				</div>
			</div>
		</a>
	<% end %>
	</div>

	<%= data_feeds_link %>

</div>
