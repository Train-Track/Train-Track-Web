<% provide(:title, "Journeys") %>
<% provide(:description, "All your journeys using Train Track.") %>

<div class="container">
	<h1>Journeys</h1>
  
	<div class="list-group">
	<% @journeys.each do |journey| %>
	    <a href="<%= journey_path(journey) %>" class="list-group-item">
			<h4 class="list-group-item-heading"><%= journey %></h4>
			<p class="list-group-item-text"><%= timestamp journey.created_at %></p>
		</a>
	<% end %>
	</div>

	<%= paginate @journeys %>

</div>
